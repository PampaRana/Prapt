    <RelativeLayout
        android:layout_marginTop="60dp"
        android:background="#e4ebf3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/cart"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textId"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:text="In case of any issues please contact us for support"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/ImageCall"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/textId"
                    android:background="@drawable/calls"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:id="@+id/callId"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/textId"
                    android:textColor="#57a2dd"
                    android:layout_toRightOf="@+id/ImageCall"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:gravity="left"
                    android:text="1800052545 (Toll Free)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cart1"
            android:layout_below="@+id/cart"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textId1"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="left"
                    android:text="Contact your distributor  for delivery,  bills, stock difficulty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textId2"
                    android:layout_below="@+id/textId1"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:gravity="left"
                    android:text="PRAPT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textId3"
                    android:layout_below="@+id/textId2"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:layout_marginLeft="15dp"
                    android:padding="1dp"
                    android:gravity="left"
                    android:text="PRAPT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/ImageCall1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@+id/textId3"
                    android:background="@drawable/calls"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:id="@+id/callId1"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/textId3"
                    android:textColor="#57a2dd"
                    android:layout_toRightOf="@+id/ImageCall1"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:gravity="left"
                    android:text="91-9874455874"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/ImageCall2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@+id/ImageCall1"
                    android:background="@drawable/tags"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/callId2"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/ImageCall1"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/ImageCall2"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:gravity="left"
                    android:text="WBL-KOLKATA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/viewId"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/callId2"
                    android:textColor="#57a2dd"
                    android:layout_toRightOf="@+id/ImageCall1"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:gravity="left"
                    android:text="View in map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cart2"
            android:layout_below="@+id/cart1"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/addId"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="left"
                    android:text="Additional details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/outletId"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_below="@+id/addId"
                    android:layout_marginLeft="15dp"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="left"
                    android:text="Outlet code: HUL-20B201D-P35356"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/appVer"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_below="@+id/outletId"
                    android:layout_marginLeft="15dp"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="left"
                    android:text="App version: 12.0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/addToCart"
                    android:layout_below="@+id/appVer"
                    android:background="@drawable/add_to_card"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="#0862db"
                    android:text="Update App"
                    android:layout_width="120dp"
                    android:layout_height="40dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>