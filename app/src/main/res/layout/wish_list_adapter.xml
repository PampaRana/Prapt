<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:background="@drawable/wishlist_squre"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="180dp"
        android:layout_height="280dp">
        <ImageView
            android:id="@+id/wish_Image"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <TextView
            android:id="@+id/wishName"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="Sunlight Eb Power"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_below="@+id/wish_Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/wishGram"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/wishName"
            android:text="500g"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/wishPrice"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/wishGram"
            android:text="₹59.63"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/discountText"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:text="₹65"
                android:layout_toRightOf="@+id/wishPrice"
                android:layout_below="@+id/wishGram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/wishPrice"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/csl_language"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_view_border">

            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add To Cart" />
        </androidx.cardview.widget.CardView>
           <ImageView
               android:id="@+id/deleteId"
               android:layout_marginRight="5dp"
               android:layout_marginTop="15dp"
               android:background="@drawable/ic_baseline_delete_24"
               android:layout_alignParentEnd="true"
               android:layout_alignBaseline="@+id/wish_Image"
               android:layout_width="30dp"
               android:layout_height="30dp"/>
    </RelativeLayout>
</LinearLayout>