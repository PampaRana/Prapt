<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-127dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/homeHeaderContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/homeHeaderNavBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_effect_circular"
                android:padding="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_nav_white" />

            <ImageView
                android:id="@+id/Img"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="30dp"
                android:background="@mipmap/home_logos"
                android:scaleType="fitXY" />

            <LinearLayout
                android:weightSum="3"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_toRightOf="@+id/Img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="0"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/home_notification"/>
                <Space
                    android:layout_width="8dp"
                    android:layout_height="0dp"/>
                <ImageView
                    android:layout_weight="0"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/home_heart" />
                <Space
                    android:layout_width="8dp"
                    android:layout_height="0dp"/>
                <ImageView
                    android:layout_weight="0"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/home_cart" />
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/homeHeaderContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/search_Id"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/search_edit"
                android:drawableStart="@drawable/home_search"
                android:inputType="text"
                android:textColor="#7c7c7c"
                android:drawableEnd="@drawable/home_mic"
                android:text="    Search by Product, Brand &amp; More.."
                android:layout_marginRight="30dp"
                android:textSize="15dp"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp" />

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/slider"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/search_Id"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorEnabled="true"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="@color/purple_500"
                app:sliderIndicatorUnselectedColor="@color/purple_200"
                app:sliderScrollTimeInSec="1" />
            <!--<androidx.viewpager.widget.ViewPager
                android:scaleType="centerCrop"
                android:id="@+id/pager"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/search_Id"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="20dp" />
            <LinearLayout
                android:gravity="center"
                android:layout_below="@+id/pager"
                android:id="@+id/indicators"
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>-->
            <LinearLayout
                android:id="@+id/lv"
                android:background="@color/cart_bg"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_below="@+id/lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rv"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@mipmap/bg2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:text="Top Packs"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginRight="20dp"
                        android:background="@drawable/ic_baseline_arrow_circle_right_24"
                        android:layout_alignParentEnd="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rv1"
                    android:background="#ccff88"
                    android:layout_below="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview1"
                        android:layout_marginRight="8dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/image1"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/rv1"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/banner2"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
                <RelativeLayout
                    android:id="@+id/rv2"
                    android:layout_below="@+id/image1"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@mipmap/bg3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:text="Top Packs"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginRight="20dp"
                        android:background="@drawable/ic_baseline_arrow_circle_right_24"
                        android:layout_alignParentEnd="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rv3"
                    android:background="#ccff88"
                    android:layout_below="@+id/rv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview2"
                        android:layout_marginRight="8dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/image2"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/rv3"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/banner2"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
                <RelativeLayout
                    android:id="@+id/rv4"
                    android:layout_below="@+id/image2"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@mipmap/bg4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:text="Top Packs"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginRight="20dp"
                        android:background="@drawable/ic_baseline_arrow_circle_right_24"
                        android:layout_alignParentEnd="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rv5"
                    android:layout_marginBottom="50dp"
                    android:background="#ccff88"
                    android:layout_below="@+id/rv4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview3"
                        android:layout_marginRight="8dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
    </ScrollView>

     </RelativeLayout>


