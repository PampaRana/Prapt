<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/Img"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="20sp"
            android:background="@drawable/ic_baseline_keyboard_backspace_24"
            android:layout_width="40sp"
            android:layout_height="40sp"/>
        <ImageView
            android:id="@+id/imageId"
            android:layout_marginTop="10sp"
            android:background="@mipmap/logo"
            android:layout_toRightOf="@+id/Img"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Img"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:padding="10dp"
            android:layout_toRightOf="@+id/imageId"
            android:text="Customer Service"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </RelativeLayout>
<!--    <ScrollView-->
<!--        android:layout_below="@+id/lv"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent">-->
        <RelativeLayout
            android:layout_below="@+id/lv"
            android:background="#e6eaf5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/productName"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Welcome to Customer Service"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/quickId"
                android:layout_below="@+id/productName"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Quick Links"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cart"
                android:layout_below="@+id/quickId"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/order"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                    <TextView
                        android:id="@+id/orderId"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:text="Order Related"
                        android:textSize="18dp"
                        android:layout_toRightOf="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                       <ImageView
                           android:background="@drawable/ic_baseline_arrow_circle_right_24"
                           android:layout_alignParentEnd="true"
                           android:layout_marginRight="10dp"
                           android:layout_width="30dp"
                           android:layout_height="30dp"/>
            </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cart1"
                android:layout_below="@+id/cart"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image1"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/payment"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:id="@+id/orderId1"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:text="Payment related"
                        android:textSize="18dp"
                        android:layout_toRightOf="@+id/image1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:background="@drawable/ic_baseline_arrow_circle_right_24"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cart2"
                android:layout_below="@+id/cart1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image2"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/mobile"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:id="@+id/orderId2"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:text="How to order"
                        android:textSize="18dp"
                        android:layout_toRightOf="@+id/image2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:background="@drawable/ic_baseline_arrow_circle_right_24"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cart3"
                android:layout_below="@+id/cart2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image3"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/order"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:id="@+id/orderId3"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:text="Ushop related"
                        android:textSize="18dp"
                        android:layout_toRightOf="@+id/image3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:background="@drawable/ic_baseline_arrow_circle_right_24"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cart4"
                android:layout_below="@+id/cart3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image4"
                        android:layout_marginLeft="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:id="@+id/orderId4"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:text="Browse all Topic"
                        android:textSize="18dp"
                        android:layout_toRightOf="@+id/image4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:background="@drawable/ic_baseline_arrow_circle_right_24"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/contractId"
                android:layout_below="@+id/cart4"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="16dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Contact Us"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cart5"
                android:layout_below="@+id/contractId"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image5"
                        android:layout_marginLeft="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:id="@+id/orderId5"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:text="Contact Us"
                        android:textSize="18dp"
                        android:layout_toRightOf="@+id/image5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:background="@drawable/ic_baseline_arrow_circle_right_24"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
<!--    </ScrollView>-->
</RelativeLayout>