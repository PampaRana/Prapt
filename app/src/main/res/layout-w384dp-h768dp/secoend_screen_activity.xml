<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fefefe"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:background="@mipmap/get_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/wel"
                android:layout_marginTop="70dp"
                android:text="Welcome to"
                android:textSize="50dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/title"
                android:layout_below="@+id/wel"
                android:layout_marginTop="0dp"
                android:textStyle="bold"
                android:text="PRAPT"
                android:textSize="45dp"
                android:textColor="@color/prapt_title"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/title1"
                android:layout_below="@+id/title"
                android:layout_marginTop="50dp"
                android:textStyle="normal"
                android:fontFamily="@font/myrladppro_boldcondit"
                android:text="A whole grocey store "
                android:textSize="20dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/title2"
                android:layout_below="@+id/title1"
                android:layout_marginTop="0dp"
                android:textStyle="normal"
                android:fontFamily="@font/myrladppro_boldcondit"
                android:text="at your finger print"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <!--        <LinearLayout-->
            <!--            android:id="@+id/lv"-->
            <!--            android:layout_below="@+id/title2"-->
            <!--            android:orientation="vertical"-->
            <!--            android:layout_marginTop="80dp"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="match_parent">-->
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:id="@+id/gif"
                android:layout_below="@+id/title2"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="0dp"
                android:background="@mipmap/bg_animation"
                android:scaleType="fitXY" />
            <LinearLayout
                android:layout_below="@+id/gif"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_getStart"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title2"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginStart="94dp"
                android:layout_marginTop="420dp"
                android:background="@drawable/get_corner"
                android:drawableEnd="@drawable/ic_baseline_arrow_circle_right_24"
                android:gravity="center"
                android:paddingEnd="20dp"
                android:text="Get Started"
                android:textColor="@android:color/white"
                android:textSize="20dp" />
            <!--    </LinearLayout>-->

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>